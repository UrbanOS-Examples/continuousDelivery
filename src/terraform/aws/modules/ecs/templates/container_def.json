[
  {
    "cpu": ${cpu_units},
    "environment": [{
      "name": "SECRET",
      "value": "KEY"
    }],
    "portMappings": [
        {
            "containerPort": 8081,
            "hostPort": 8081
        }
    ],
    "mountPoints": [
            {
              "sourceVolume": "nexus-data",
              "containerPath": "/nexus-data"
            }
    ],
    "essential": true,
    "image": "${docker_image}",
    "memory": ${mem_units},
    "memoryReservation": ${mem_res},
    "name": "${task_def_name}"
  }
]
